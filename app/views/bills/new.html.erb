<%= form_for(@bill) do |f| %>
  <section>
    <div class="heading">
      <h5 class="text-center text-capitalize font-weight-bold border-bottom py-3">
        Sales tax calculator
      </h5>
    </div>
    <div class="container">
      <div class="col-xl-7 col-md-7 col-sm-12 col-12 m-auto pt-3 items-info ">
        <h4 class="font-weight-bold mt-3 py-2" >Item Details</h4>
        <div class="row mx-0 py-2">
          <div class="col-xl-2 col-md-2 col-sm-2 col-2 pl-0">
            <h6 class="font-weight-bold">Qty</h6>
          </div>  
          <div class="col-xl-6 col-md-6 col-sm-6 col-6">
            <h6 class="font-weight-bold">Item Description</h6>
          </div>
          <div class="col-xl-3 col-md-3 col-sm-3 col-4 pr-0">
            <h6 class="font-weight-bold">Shelf Price</h6>
          </div>
        </div>
        <%= render 'form', f:f %>
        <%= f.submit "Generate Receipt",class: "text-white px-4 py-2 rounded generate-receipt" %>
      </div>
    </div>  
  </section>
<% end %>
